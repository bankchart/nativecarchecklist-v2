<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="10dp" />

            <padding
                android:bottom="10dp"
                android:left="-110dp"
                android:right="10dp"
                android:top="-70dp" />

            <stroke
                android:width="2dp"
                android:color="#ff207d94" >
                <gradient
                    android:angle="180"
                    android:endColor="#ffffff"
                    android:startColor="#0080d8"
                    android:type="linear" />
            </stroke>
        </shape>
    </item>

</layer-list>