<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="200dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <stroke
                android:width="2dp"
                android:color="#ff207d94" >
                <gradient
                    android:angle="180"
                    android:endColor="#ffffff"
                    android:startColor="#0080d8"
                    android:type="linear" />
            </stroke>
        </shape>
    </item>

</layer-list>